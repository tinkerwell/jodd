
	<!-- distribution: $[moduleName] -->

	<property name="$[moduleName].jar" value="${dist.dir}/$[moduleName]-${prjVersion}.jar"/>

	<target name="dist.$[moduleName]" depends="build.$[moduleName]" description="creates distribution for module '$[moduleName]'">
		<mkdir dir="${dist.dir}"/>
		<jar jarfile="${$[moduleName].jar}" compress="true">
			<manifest>
				<attribute name="Debug-Info" value="on"/>
				<attribute name="Release-Date" value="${TODAY}"/>
				<attribute name="Implementation-Title" value="${prjName}-$[moduleName]"/>
				<attribute name="Implementation-Version" value="${prjVersion}"/>
				<attribute name="Main-Class" value="%ARG1%"/>
			</manifest>
			<fileset dir="${$[moduleName].production.out.dir}"/>
		</jar>
	</target>
