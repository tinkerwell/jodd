<!DOCTYPE idea-plugin PUBLIC "Plugin/DTD" "http://plugins.intellij.net/plugin.dtd">
<idea-plugin version="2" url="http://jodd.org/doc/props.html">

	<id>org.jodd.idea.props</id>
	<name>Jodd Props Support</name>
	<depends>com.intellij.modules.xml</depends>
	<description>
		Enables editing of Jodd props files.
	</description>
	<category>Custom Languages</category>
	<vendor logo="/gfx/jodd.png" url="http://jodd.org">Jodd Team</vendor>
	<version>0.5</version>
	<idea-version since-build="103.72"/>

	<extensions defaultExtensionNs="com.intellij">

		<fileTypeFactory implementation="jodd.idea.props.PropsFileTypeFactory"/>
		<syntaxHighlighter key="Props" factoryClass="jodd.idea.props.PropsSyntaxHighlighterProvider"/>
		<lang.parserDefinition language="Props" implementationClass="jodd.idea.props.parser.PropsParserDefinition"/>

		<colorSettingsPage implementation="jodd.idea.props.PropsColorsPage"/>

	</extensions>

	<application-components>
		<component>
			<implementation-class>jodd.idea.props.PropsAppComponent</implementation-class>
		</component>
	</application-components>
</idea-plugin>
